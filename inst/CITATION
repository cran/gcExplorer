         note          = "doi: 10.1093/bioinformatics/btp099",
         
         textVersion = 
         paste("Theresa Scharl and Friedrich Leisch.", 
               "gcExplorer: Interactive Exploration of Gene Clusters.",
               "Bioinformatics, 25 (8): 1089--1090, 2009.")
